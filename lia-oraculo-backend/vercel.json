{
  "version": 3,
  "builds": [
    {
      "src": "public/index.html",
      "use": "@vercel/static"
    },
    {
      "src": "api/chat.js",
      "use": "@vercel/node"
    }
  ],
  "routes": [
    { "src": "/api/(.*)", "dest": "/api/chat.js" },
    { "src": "/(.*)", "dest": "/public/index.html" }
  ]
}
